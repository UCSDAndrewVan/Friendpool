<!doctype html>

<html lang="en">
<head>
    <title>Request a Ride</title>
    <meta charset="utf-8"> 
    
      <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">

      <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

      <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
      
    <link rel="stylesheet" href="css/riderhome.css" type="text/css">
      
</head>
<body>        
    <div class="container">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Friendpool</a>
                </div>
                <ul class="nav navbar-nav">
                <li><a href="/">Home</a></li>
                <li><a href="drivertime">Driver</a></li>
                <li class="active"><a href="riderinfo">Rider</a></li>
                <li><a href="help">Help</a></li>
                </ul>
            </div>
        </nav>
        <h1>REQUEST A RIDE</h1>
        
        {{#each friends}}
            {{#if available}}
            <a href="confirm">
            <div class="row">
                <div class="col-sm-4">{{depart}}</div>
                <div class="col-sm-2"><img src="{{imageURL}}"></div>
                <div class="col-sm-6">{{name}}</div>
            </div>
            </a>
            {{else}}
            <div class="row" id="unavailable">
                <div class="col-sm-4">{{depart}}</div>
                <div class="col-sm-2"><img src="{{imageURL}}"></div>
                <div class="col-sm-6">{{name}}</div>
            </div>
            {{/if}}
        {{/each}}
        
<!--        <script src="js/riderhome.js"></script>-->
        
        <div class="goback">
            <a href="driverrider">
                <button type="button" class="btn btn-primary" onclick="history.go(-1)">Go back</button>
            </a>
        </div>
    </div>
</body>
</html>